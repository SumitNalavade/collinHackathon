<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Login or Sign Up</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning loginLoadingSpinner d-none" role="alert">
                    <span>
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        Loading...
                    </span>
                  </div>
                <div class="accordion" id="accordionExample">
                    <!-- Login Default Accordion -->
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingOne">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Login
                            </button>
                        </h2>
                        <div id="collapseOne" class="accordion-collapse collapse show"
                            aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <form class="form authForm">
                                    <div>
                                        <label>Email</label>
                                        <input type="username" id="emailLogin" class="loginInput authInput"
                                            required>
                                    </div>
                                    <div>
                                        <label>Password</label>
                                        <input type="password" id="passwordLogin" class="loginInput authInput"
                                            required>
                                    </div>
                                    <button class="btn btn-success" id="loginButton">Login</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- Sign Up Accordion -->
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingTwo">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Sign Up
                            </button>
                        </h2>
                        <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo"
                            data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <form class="form authForm">
                                    <div>
                                        <label>First Name</label>
                                        <input type="text" class="signUpInput authInput" id="signupFirstName"
                                            required>
                                    </div>
                                    <div>
                                        <label>Last Name</label>
                                        <input type="text" class="signUpInput authInput" id="signupLastName"
                                            required>
                                    </div>
                                    <div>
                                        <label>Email</label>
                                        <input type="email" class="signUpInput authInput" id="signupEmail"
                                            required>
                                    </div>
                                    <div>
                                        <label>Password</label>
                                        <input type="password" class="signUpInput authInput" id="signupPassword"
                                            required>
                                    </div>
                                    <div>
                                        <label>Address</label>
                                        <input type="address" class="signUpInput authInput" id="signupAddress">
                                    </div>
                                    <button class="btn btn-success" id="signUpButton">Sign
                                        Up</button>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>